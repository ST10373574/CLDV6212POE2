@model IEnumerable<ABCRetailApp.Models.ContractModel>

@{
    ViewData["Title"] = "File Management";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: orange;
            color: ghostwhite;
            margin: 0;
            padding: 20px;
        }

        h2 {
            color: #343a40;
            font-weight: 700;
            margin-bottom: 20px;
        }

        /* Upload Form Styling */
        form {
            margin-bottom: 20px;
            padding: 15px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        input[type="file"] {
            border: 1px solid #ced4da;
            padding: 8px;
            border-radius: 4px;
            font-size: 16px;
        }

        button {
            background-color: #007bff;
            color: #ffffff;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            button:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

        /* Table Styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        thead {
            background-color: #6c757d;
            color: #ffffff;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        tbody tr:hover {
            background-color: #e9ecef;
        }

        a {
            color: #007bff;
            text-decoration: none;
            padding: 8px 12px;
            background-color: #f8f9fa;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            a:hover {
                background-color: #007bff;
                color: #ffffff;
            }
    </style>
</head>
<body>

    <h2>@ViewData["Title"]</h2>

    <!-- Upload Form -->
    <form asp-controller="Files" asp-action="Upload" method="post" enctype="multipart/form-data">
        <input type="file" name="file" />
        <button type="submit">Upload</button>
    </form>

    <!-- List Files -->
    <table class="table">
        <thead>
            <tr>
                <th>File Name</th>
                <th>Size</th>
                <th>Uploaded Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.FileName</td>
                    <td>@file.DisplaySize</td>
                    <td>@file.UploadedDate?.ToString("yyyy/MM/dd")</td>
                    <td>
                        <a asp-controller="Files" asp-action="Download" asp-route-fileName="@file.FileName">Download</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
