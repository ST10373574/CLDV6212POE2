@model IEnumerable<ABCRetailApp.Models.CustomerProfile>

<!DOCTYPE html>
<html>
<head>
    <title>Customer Profiles</title>
    <!-- Font Import -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: orange;
            margin: 0;
            padding: 0;
            color: #495057;
        }

        /* Header Styling */
        .header {
            background-color: #343a40;
            padding: 15px 20px;
            color: #ffffff;
            text-align: center;
            font-size: 24px;
            font-weight: 700;
        }

        /* Container Styling */
        .container {
            max-width: 1500px; /* Increased width */
            margin: 0 auto;
            padding: 20px;
        }

        /* Card Layout */
        .card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

            .card h3 {
                margin: 0;
                font-size: 20px;
                color: #343a40;
            }

            .card p {
                margin: 10px 0;
                color: #6c757d;
            }

        .card-actions {
            margin-top: 15px;
        }

        /* Button Styling */
        .btn {
            background-color: #17a2b8;
            color: #ffffff;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
            display: inline-block;
            margin-right: 10px;
        }

        .btn-primary {
            background-color: #28a745;
        }

            .btn-primary:hover {
                background-color: #218838;
                transform: translateY(-2px);
            }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                transform: translateY(-2px);
            }

        .btn:hover {
            transform: translateY(-2px);
        }

        }
    </style>
    <script>
        function confirmDelete(event) {
            if (!confirm('Are you sure you want to delete this customer?')) {
                event.preventDefault(); // Prevent form submission
            }
        }
    </script>
</head>
<body>

    <div class="header">Customer Profiles Management</div>

    <div class="container">
        @foreach (var customer in Model)
        {
            <div class="card">
                <h3>@customer.FirstName @customer.Surname</h3>
                <p>Email: @customer.Email</p>
                <div class="card-actions">
                    <form asp-action="Delete" method="post" style="display:inline;" onsubmit="confirmDelete(event)">
                        <input type="hidden" name="partitionKey" value="@customer.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@customer.RowKey" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a href="@Url.Action("Edit", new { id = customer.RowKey })" class="btn btn-primary">Edit</a>
                </div>
            </div>
        }

        <a href="@Url.Action("Create")" class="btn btn-primary">Add New Customer</a>
    </div>

    <div class="footer">© 2024 Retail Management System</div>

</body>
</html>
